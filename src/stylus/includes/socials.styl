.Socials
	position fixed 
	width 40px
	bottom -200px
	right 20px
	display block
	z-index 5000
	transition_all(2s)
	opacity 0
	&.is-load
		opacity 1
		bottom 20px
		
	
	&-Link
		background-color white_color
		background-position center
		background-repeat no-repeat
		background-size 20px
		border-radius 50%
		display block
		height 40px
		margin 0 0 10px
		overflow hidden
		shadow_custom(0, 10px, 20px, 0px, .2)
		width 100%
		span 
			display none
		&.instagram
			background-image url('../img/static/instagram-icon.png')
		&.medium
			background-image url('../img/static/medium-icon.png')
		&.twitter
			background-image url('../img/static/twitter-icon.png')
		&.youtube
			background-image url('../img/static/youtube-icon.png')
		
@media only screen and (min-width : 1100px)
	.Socials
		width 50px
		right 5%
		bottom -200px
		&.is-load
			bottom 80px
		
		&-Link
			background-size 27px
			height 50px
			&:hover
				transform scale(1.2)
				shadow_custom(0, 25px, 60px, -10px, .6)
			




@media only screen and (min-width : 1400px)
	.Socials
		right 15%















