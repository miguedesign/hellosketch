.btn
	background white_color
	border none
	color grey_color_4
	font-family tipography
	font-size 14px
	font-weight 400
	letter-spacing 1px
	line-height 1.5em
	outline 0
	overflow hidden !important
	padding 5px 12px
	position relative
	text-decoration none
	transition_all(.3s)
	&-radius
		border-radius 50px
	&-disabled
		opacity .2
		cursor default
		border solid thin grey_color_3
		&:hover
			box-shadow none
			color grey_color_4
			background transparent !important
		
	&-mini
		padding 2px 6px
		font-size 10px
	
	&-small
		padding 4px 10px
		font-size 12px
		
	&-medium
		font-size 14px
		padding 8px 13px
	
	&-big
		padding 10px 15px
		line-height 1.7em
		font-weight 600
		font-size 16px
	
	&-mega
		padding 20px 35px
		line-height 1.9em
		font-size 18px
		font-weight 600
			
	&-gradient
		overflow hidden !important
		background primary_color
		bg_gradient_left(primary_color, acent_color)
		color white_color
		border none
		shadow_custom(0, 10px, 40px, -4px, .2)
		
	&-positive
		overflow hidden !important
		background primary_color
		color white_color
		border none
		shadow_custom(0, 5px, 20px, -4px, .2)
		
	&-negative
		overflow hidden !important
		background white_color
		color primary_color
		border none
		shadow_custom(0, 5px, 20px, -4px, .2)


@media only screen and (min-width : 1100px)
	.btn
		&-gradient
			display inline-block
			&::after
				position absolute
				content ''
				display block 
				width 100%
				height 10%
				background rgba(dark_color, .1)
				// transform translateX(68%) skew(-45deg)
				right 0
				bottom 0
				transition_all(.5s)
			&:hover
				&::after
					height 100%
					// transform translateX(-34%) skew(-45deg)
					z-index 0
			
		
		&:hover
			shadow_custom(0, 15px, 90px, -5px, .4)
			