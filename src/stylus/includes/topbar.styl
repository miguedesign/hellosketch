.topbar
	position fixed
	top 0
	left 0
	width 100%
	z-index 10500
	display block
	// &.is-loading
	

.Header	
	transition_all(1s)
	padding 10px 10px
	display block
	position relative
	top -300px
	&.is-scrolled
		background white
		shadow_custom(0, 2px, 20px, 0px, .1)
		top 0
	&-Brand
		overflow hidden
		height 40px
		width 210px
		display inline-block
		margin-left 10px
		&-Icon
		&-Logo
			display inline-block
			background-repeat no-repeat
			background-size 100%
			background-position center
			height 40px
		&-Icon
			background-image url('../img/static/hello-sketch-icon.png')
			width 40px
		&-Logo
			margin-left 5px
			background-image url('../img/static/hello-sketch-logo.svg')
			width 160px
			
		
	&-Menu
		&-Link
			font-size 12px
			font-weight 600
			color dark_color
			padding 5px 10px
			letter-spacing 0px
			&.is-current
				color primary_color


@keyframes progress
	0%
		left 0
		width 1px
	50%
		right 0
		left 0
		width 100%
	51%
		width 100%
		left initial
	75%
		width 1px
		right 0
				


@media only screen and (min-width : 1100px)
	.topbar
		padding 0
	.Header	
		&-Brand
			position relative
			transition_all(.3s)
			margin-left 0
				 
			&:hover
				&::before
					width 0
					height 0
					left 50%
					top 50%
				&::after
					opacity 1
					transform scale(1)
			&--project
				&:hover
					border solid 20px dark_color
					
		&-Menu
			&-Link
				margin 10px 1px
				padding 10px 
				position relative
				font-weight 500
				text-transform uppercase
				font-size 12px
				letter-spacing 1px
				&:last-child
					margin-right 0
