body
	color black_color_m
	background acent_color_m

.Info
	text-align left
	padding 30px
	position relative
	overflow hidden
	&::after
		background-image url('../img/meetup/gradient.png')
		background-position center
		background-repeat no-repeat
		background-size 100%
		bottom -30px
		content ''
		height 250px
		position absolute 
		right -20px
		width 250px
		z-index -1
	&::before
		position absolute 
		content ''
		top -100px
		width 300px
		height 300px
		left -100px
		border-radius 50%
		border solid 1px #FF8B00
		z-index -1
		
		
		
	
	&_Name
		font-size 20px
		padding 10px
		background white_color
		text-transform uppercase
		display inline-block
		text-align center
		
		
	&_Title
		font-weight 700
		font-size 42px
		margin-top 30px
		span
			display block
			font-size 40px
			font-weight 300
	&_Date
		font-weight 300
		margin-top 50px
		font-size 24px
		div 
			display block
			margin-bottom 5px
		span
			display none
	&_Address
		margin-top 10px
		font-size 24px
		font-weight 300
		small
			font-size 18px
			display block
			font-weight 100

.Sidebar
	background white_color
	padding 30px
	text-align left
	&_Title
		font-size 50px 
		margin-bottom 10px
		font-weight 400
	&_Slots
		font-size 30px
		margin-top 10px
		font-weight 100
		span
			color black_color_m
			font-weight 700
.Form
	margin-top 50px
	color dark_color_m
	
	label 
		display block	
		font-size 16px
		margin-bottom 5px
		
	input
		line-height 40px
		text-indent 10px
		display block
		width 100%
		border solid 2px dark_color_m
		font-weight 700
		font-size 16px
		transition_all(.3s)
		&:focus
			outline none
			border-color black_color_m
	
	button
		background white_color
		color dark_color_m
		display block
		line-height 40px
		position relative
		text-transform uppercase
		width 100%
		border none
		z-index 10
		font-weight 700
		transition_all(.3s)
		&:before
			content ''
			background white_color
			top -1px
			left 0
			width 100%
			height 100%
			position absolute
			border solid 2px dark_color_m
			z-index -1
		&:after
			transition_all(.3s)
			background acent_color_m
			border solid 2px dark_color_m
			content ''
			display block
			height 100%
			left 5px
			position absolute
			top 5px
			width 100%
			z-index -4
			
		

	&_Item
		display block
		margin 20px 0 30px
		&_Sub
			display inline-block
			width 48%
			position relative
			cursor pointer
			height 24px
			user-select none
			&:hover input ~ .checkmark
				background rgba(dark_color_m, .9)
				
			label
				line-height 24px
				width 100%
				padding-left 35px
				z-index 10
				position absolute
				font-weight 700
				font-size 20px
			label
			input
				display inline-block
			input
				width 24px
				margin 0 5px 0
				height 24px
				border-radius 50%
				position absolute
				opacity 0
				&:checked ~ .checkmark
					background dark_color_m
					
				&:checked ~ .checkmark:after
					display block
					
					
			.checkmark
				position absolute
				width 24px
				height 24px
				top 0
				left 0
				background rgba(dark_color_m, .2)
				border-radius 50%
				&:after
					content ''
					display none
					position absolute
					top 7px
					left 7px
					width 10px
					height 10px
					border-radius 50%
					background acent_color_m
					
					
@media only screen and (min-width : 325px)
	.Info
	.Sidebar
		padding 45px

@media only screen and (min-width : 768px)
	.Info
		&_Title
			font-size 90px
			span
				font-size 90px
		&_Date
		&_Address
			font-size 48px
			small
				font-size 24px
			
			
	.Form
		margin-top 75px
		input
			font-size 24px
						

@media only screen and (min-width : 910px)
	.Info
		padding 70px
		height 100%
		height 100vh
		&::after
			right 30%
			bottom 0
			width 550px
			height 550px
		
		&_Title
			font-size 72px
			span
				font-size 72px
				
		&_Date
			font-size 32px
			span
				display inline-block
			div
				display inline-block
		
	.Sidebar
		position absolute
		right 0
		top 0
		height 100%
		height 100vh
		padding 70px
		width 400px


@media only screen and (min-width : 1024px)
	.Info
		&:before
			width 450px
			height 450px
		&_Title
			font-size 72px
			span
				font-size 72px
		&_Address
		&_Date
			font-size 40px
			
		&_Address
			margin-top 0
			
		&_Date
			margin-top 130px
		
	.Sidebar
		&_Title
			font-size 24px

		&_Slots
			font-size 28px
	
	.Sidebar
		padding 70px 40px
		
	button
		&:before
			transition_all(.4s)
		&:hover
			color acent_color_m
			&:before
				background black_color_m
			&:after
				top -1px
				left 0

	

		
@media only screen and (min-width : 1200px)
	.Info 
		padding-top 90px
		padding-left 80px
		padding-right 35%
		&::after
			background-position center bottom
			background-size 400px
			
		&_Title
			font-size 100px
			span
				font-size 100px
		&_Address
		&_Date
			font-size 45px
	.Sidebar
		padding 90px 70px
		width 35%
		&_Title
			font-size 50px
		&_Slots
			font-size 35px

@media only screen and (min-width : 1600px)
	.Info 
		padding-top 200px
		padding-left 140px
		&_Title
			font-size 110px
			span
				font-size 110px
		
	.Sidebar
		padding 200px 80px

