/*======== Electron =======*/
Atom_radius = 30px
Electron_radius =  5px

circle(radio)
	border-radius 50%
	width (radio * 2)
	height (radio * 2)
			
@keyframes orbita
	0%
		transform rotateZ(0deg) translateX(Atom_radius)
	100%
		transform rotateZ(360deg) translateX(Atom_radius)
		
/*===============*/

body
	color white_color
	background-color black_color_m
	font-family tipography
	
	
.js_show
	transition_all(1s)
	opacity 0
	&.show-1
		transition-delay .2s
	&.show-2
		transition-delay .4s
	&.show-3
		transition-delay .6s
	&.show-4
		transition-delay .8s
	&.is-load
		opacity 1

.js_scale
	// margin-top -200px
	transform scale(0)
	transition_all(1s)
	&.is-load
		margin-top 0
		transform scale(1)
		

		
.Main
	padding 30px
	background-image url('../img/meetup/bg-atomic.png')
	background-position center 0
	background-repeat no-repeat
	background-size 100%
	height 100vh
	transition_all(1s)
	opacity 0
	&.is-load
		opacity 1
		
	&_Name
		font-size 40px
		margin-top 120px
		position relative
		font-weight 900
		&_Icon
			border solid 1px white_color
			circle(Atom_radius)
			left 50%
			margin-left -(Atom_radius)
			position absolute
			top -(Atom_radius*2.5)
			&::after
				content ''
				display block
				circle( Electron_radius )
				position absolute
				top (Atom_radius - Electron_radius)
				left (Atom_radius - Electron_radius)
				background-color white_color
				animation orbita 2s infinite linear
			&::before
				content ''
				display block
				circle( Electron_radius*2 )
				position absolute
				top (Atom_radius - (Electron_radius*2))
				left (Atom_radius - (Electron_radius*2))
				background-color white_color
			
				
	&_Title
		font-family tipography2
		font-size 24px
		font-style italic
		font-weight 100
		

