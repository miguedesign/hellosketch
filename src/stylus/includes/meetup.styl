.send
	background white_color
	border solid 1px white_color
	border-radius 4px
	color dark_color_m
	display inline-block
	font-size 15px
	font-weight 900
	line-height 36px
	margin 0 auto
	position relative
	width 100%
	z-index 10
	transition_all(.3s)
	&:focus
		outline none
		box-shadow 0 0 0 4px rgba(white_color, .4)
		background rgba(white_color, .8)
		border-color rgba(white_color, .8)
	&.is-sending
		overflow hidden
		&::after
			content ''
			display block
			top 0 
			height 100%
			animation progressing 1s infinite ease-in-out
			transition_all(.3s)
			background rgba(black_color_m, .9)
			position absolute

