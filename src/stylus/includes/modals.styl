.Modal
	height 100%
	left 0 
	overflow hidden
	position fixed 
	top 0
	background rgba(black_color_m, .8)
	width 100%
	z-index 10001
	display none
	&.is-active
		background rgba(black_color_m, .8)
		display block
		
	&__close
		width 40px
		height 40px
		z-index 100
		position absolute
		top 10px
		right 10px
		text-align center
		border-top solid thin divider_color
		&>.btn
			height 100%
			position relative
			display block
			text-indent -9999
			color transparent
			&:hover
				opacity .7
			&:before
			&:after
				content ''
				display block 
				width 40%
				position absolute
				height 2px
				background rgba(white_color, 0.6)
			&:before
				transform rotate(45deg)
				top 17px
				left 12px
			&:after
				transform rotate(-45deg)
				top 17px
				left 12px
				
	&__container
		background-color #1A1720
		// background-image url('../img/meetup/ds-modal.jpg')
		background-position top center
		background-repeat no-repeat
		background-size cover
		width 90%
		display block 
		margin 5% auto
		height 90%
		max-height 400px
		shadow_custom(0px, 35px, 60px, -12px, .3)
		position relative
		border-radius 4px
		padding-top 130px
		padding-left 40px
		padding-right 40px
		&::after
			position absolute
			bottom 40px
			left 0
			width 98%
			height 50px
			display block
			content ''
			bg_gradient(rgba(white_color, 0), white_color)
		
	&__Title
		display inline-block
		font-weight 
		font-size 30px
	&__Img
		width 100px
		margin 100px auto 20px
.close-modal	
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	display block
	z-index -1
	
.cta
	background white_color
	border solid 1px white_color
	border-radius 4px
	color dark_color_m
	display inline-block
	font-size 15px
	font-weight 900
	line-height 36px
	margin 10px auto 30px
	padding 5px 20px
	position relative
	transition_all(.3s)
	z-index 10
	

@media screen and (min-width: 1025px)
	.Modal
		&__container
			height 400px
			margin-top -200px
			top 50%
			position absolute
			left 50%
			margin-left -250px
			max-width 500px
			



