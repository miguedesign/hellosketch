.Modal
	height 100%
	left 0 
	overflow hidden
	position fixed 
	top 0
	background rgba(black_color, .6)
	width 100%
	z-index 10001
	display none
	&.is-active
		background rgba(black_color, .6)
		display block
		
	&__close
		width 40px
		height 40px
		z-index 100
		position absolute
		top 10px
		right 10px
		text-align center
		border-top solid thin divider_color
		&>a
			height 100%
			position relative
			display block
			text-indent -9999
			color transparent
			&:hover
				opacity .7
			&:before
			&:after
				content ''
				display block 
				width 100%
				position absolute
				height 1px
				background black_color
			&:before
				transform rotate(45deg)
				top 17px
				left 0
			&:after
				transform rotate(-45deg)
				top 17px
				left 0
				
	&__container
		background white_color
		width 90%
		width 90vh
		max-width 500px
		display block 
		margin 0 auto
		height 90%
		height 90vh
		max-height 400px
		shadow_custom(0px, 35px, 60px, -12px, .3)
		position relative
		border-radius 4px
		&::after
			position absolute
			bottom 40px
			left 0
			width 98%
			height 50px
			display block
			content ''
			bg_gradient(rgba(white_color, 0), white_color)
		
	&__Title
		display inline-block
		font-weight 300
	&__Img
		width 100px
		margin 100px auto 20px
.close-modal	
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	display block
	z-index -1
	


@media screen and (min-width: 1025px)
	.Modal
		&__container
			height 400px
			margin-top -200px
			top 50%
			position absolute
			left 50%
			margin-left -250px
			



